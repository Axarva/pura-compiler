initialModel : Int
let initialModel = 0

update : String -> Int -> Int
-- let update = msg => model =>
--  if msg == 0 then (model + 1) else (if msg == 1 then (model - 1) else model)
let update = msg => model => {
  if msg == "0" then {
   model + 1
  } else {
    if msg == "1" then {
      model - 1
    } else model
   }
}

view : Int -> Html Msg
let view = model => {
  div [] [
    h1 [] [text "Pura Counter"],
    p [] [text ("Count: " ++ (toString model))],
    button [htmlOnClick "0"] [text "+"],
    button [htmlOnClick "1"] [text "-"]
  ]
}
