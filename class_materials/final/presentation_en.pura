-- Slide 1: The Problem (Complex JS Bug - Undefined & Coercion)
viewProblem : Int -> Html String
let viewProblem = idx =>
  slideWrapper [
    h1 [] [ text "Challenge: Runtime Instability" ],
    p [ htmlClass "subtitle" ] [ text "Dynamic typing creates silent failures." ],
    div [ htmlClass "code-block" ] [
      line [ kw "function", norm " calculateTotal(cart) {" ],
      line [ norm "  ", kw "let", norm " total ", kw "=", norm " 0;" ],
      line [ norm "  ", kw "for", norm " (", kw "let", norm " item ", kw "of", norm " cart.items) {" ],
      line [ norm "    ", cmt "// BUG 1: 'price' is a string from API (\"10\")" ],
      line [ norm "    ", cmt "// Result is string concatenation: \"010\"" ],
      line [ norm "    total ", kw "+=", norm " item.price;" ],
      line [ norm "    ", cmt "// BUG 2: If item.tax is missing, it adds undefined (NaN)" ],
      line [ norm "    total ", kw "+=", norm " item.tax;" ],
      line [ norm "  }" ],
      line [ norm "  ", kw "return", norm " total.toFixed(2); ", cmt "// Crashes if NaN" ],
      line [ norm "}" ]
    ],
    p [ htmlClass "fragment visible" ] [ text "Logic errors that pass syntax checks but crash production." ]
  ]

